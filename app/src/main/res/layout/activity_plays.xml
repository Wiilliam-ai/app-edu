<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".views.others.PlaysActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            app:layout_scrollEffect="compress"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:title="Niveles"
            app:titleCentered="true"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:contentDescription="@string/todo"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/game_maravillas" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="10dp"
                            android:text="Descubre las maravillas"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/white"
                            android:elevation="0dp"
                            android:text="Ver"
                            android:textColor="@color/primary"
                            app:icon="@drawable/baseline_visibility_24"
                            app:iconSize="25dp"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp" />

                        <Button
                            android:id="@+id/btnIrMaravillas"
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/white"
                            android:elevation="0dp"
                            android:text="Jugar"
                            android:textColor="@color/primary"
                            app:icon="@drawable/baseline_play_circle_outline_24"
                            app:iconSize="25dp"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:contentDescription="@string/todo"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/math" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="10dp"
                            android:text="Juega con los numeros"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/white"
                            android:elevation="0dp"
                            android:text="Ver"
                            android:textColor="@color/primary"
                            app:icon="@drawable/baseline_visibility_24"
                            app:iconSize="25dp"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp" />

                        <Button
                            android:id="@+id/btnGameMath"
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/white"
                            android:elevation="0dp"
                            android:text="Jugar"
                            android:textColor="@color/primary"
                            app:icon="@drawable/baseline_play_circle_outline_24"
                            app:iconSize="25dp"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:contentDescription="@string/todo"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/game_maravillas" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="10dp"
                            android:text="Descubre las maravillas"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/white"
                            android:elevation="0dp"
                            android:text="Ver"
                            android:textColor="@color/primary"
                            app:icon="@drawable/baseline_visibility_24"
                            app:iconSize="25dp"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp" />

                        <Button
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/white"
                            android:elevation="0dp"
                            android:text="Jugar"
                            android:textColor="@color/primary"
                            app:icon="@drawable/baseline_play_circle_outline_24"
                            app:iconSize="25dp"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:contentDescription="@string/todo"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/game_maravillas" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="10dp"
                            android:text="Descubre las maravillas"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/white"
                            android:elevation="0dp"
                            android:text="Ver"
                            android:textColor="@color/primary"
                            app:icon="@drawable/baseline_visibility_24"
                            app:iconSize="25dp"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp" />

                        <Button
                            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="15dp"
                            android:backgroundTint="@color/white"
                            android:elevation="0dp"
                            android:text="Jugar"
                            android:textColor="@color/primary"
                            app:icon="@drawable/baseline_play_circle_outline_24"
                            app:iconSize="25dp"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="1dp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>